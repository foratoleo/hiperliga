{
  "name": "hiperliga",
  "version": "1.0.0",
  "private": true,
  "description": "Website oficial da Hiperliga - Argamassa Polimérica Inovadora",
  "scripts": {
    "dev": "next dev",
    "build": "npm run type-check && npm run lint && next build && npm run analyze",
    "build:fast": "next build",
    "build:prod": "NODE_ENV=production npm run build:fast",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write . --ignore-path .gitignore",
    "format:check": "prettier --check . --ignore-path .gitignore",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build:prod",
    "performance:audit": "npm run build && lighthouse http://localhost:3000 --output=json --output-path=./performance-report.json",
    "test:performance": "npm run build && npm start & npm run performance:audit && kill %1",
    "monitor": "node claude-monitor.js",
    "monitor-build": "node claude-monitor.js npm run build",
    "monitor-claude": "node claude-monitor.js claude",
    "monitor-dev": "node claude-monitor.js npm run dev",
    "monitor-lint": "node claude-monitor.js npm run lint",
    "monitor-debug": "DEBUG=1 node claude-monitor.js",
    "simulate-monitor": "node claude-monitor.js simulate",
    "monitor-v2": "node claude-monitor-v2.js",
    "monitor-claude-v2": "node claude-monitor-v2.js claude",
    "monitor-build-v2": "node claude-monitor-v2.js npm run build",
    "monitor-v3": "node claude-monitor-v3.js",
    "monitor-claude-v3": "node claude-monitor-v3.js claude",
    "monitor-build-v3": "node claude-monitor-v3.js npm run build",
    "daemon-start": "node claude-monitor-daemon.js",
    "daemon-bg": "node claude-monitor-daemon.js --bg",
    "daemon-stop": "node claude-monitor-daemon.js --stop",
    "daemon-status": "node claude-monitor-daemon.js --status",
    "claude-monitored": "node claude-wrapper.js",
    "claude-real": "node claude-real.js"
  },
  "keywords": [
    "hiperliga",
    "argamassa",
    "construção",
    "sustentabilidade"
  ],
  "author": "Gran Finelle",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@next/bundle-analyzer": "^15.5.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "next-seo": "^6.8.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.2",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17"
  }
}
